[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
[user]
	name = Joyce Babu
	email = joyce@ennexa.com
[pull]
	rebase = true
[rebase]
	autoStash = true
[diff]
	tool = vimdiff
	algorithm = patience
	compactionHeuristic = true
[color]
	branch = auto
	status = auto
	diff = auto
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	commit = yellow bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "status"]
	added = green
	changed = yellow
	untracked = blue
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[gc]
	autoDetach = false
[merge]
	tool = nvim
	conflictstyle = diff3
[mergetool "vimdiff"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
	prompt = false
	keepBackup = true
[mergetool "nvim"]
	cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
	keepBackup = true
[fetch]
	prune = true
[commit]
	template = ~/.gitmessage
[init]
	defaultBranch = master
