[core]
    editor = nvim
    excludesfile = ~/.gitignore_global
[user]
    name = Joyce Babu
    email = joyce@ennexa.com
[pull]
    rebase = true
[rebase]
    autoStash = true
[diff]
    tool = vimdiff
[color]
    branch = auto
    status = auto
    diff = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = yellow
    untracked = blue
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[gc]
    autoDetach = false
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
    prompt = false
    keepBackup = true
